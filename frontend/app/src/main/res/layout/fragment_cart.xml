<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cartRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:fitsSystemWindows="true">

    <!-- RecyclerView takes available space -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:scrollbars="vertical" />

    <!-- Empty state (shown when cart is empty) -->
    <LinearLayout
        android:id="@+id/cartEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="24dp">

        <ImageView
            android:id="@+id/cartEmptyIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_empty_cart"
            android:contentDescription="@string/cart_empty_message" />

        <TextView
            android:id="@+id/cartEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_empty_message"
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Bottom total bar -->
    <LinearLayout
        android:id="@+id/cartSummaryBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
	android:elevation="12dp"
        android:background="@drawable/rounded_white">

        <TextView
            android:id="@+id/totalLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/totalAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="â‚¹0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="start" />

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:gravity="center"
            android:text="Checkout"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>